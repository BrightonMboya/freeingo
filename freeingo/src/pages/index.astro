---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import "../css/bootstrap.min.css";
import "../css/style.css";
import "../css/custom.css";
import Hero from "../components/Hero.astro";
import Gallery from "../components/Gallery.astro";
import Destinations from "../components/Destinations.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="WildLife Touring company in Arusha Tanzania"
    />
    <meta name="author" content="Brighton Mboya" />
    <title>freeinGo Safaris</title>

    <!-- Favicons-->
    <link rel="shortcut icon" href="img/favicon.ico" type="image/x-icon" />
    <link
      rel="apple-touch-icon"
      type="image/x-icon"
      href="img/apple-touch-icon-57x57-precomposed.png"
    />
    <link
      rel="apple-touch-icon"
      type="image/x-icon"
      sizes="72x72"
      href="img/apple-touch-icon-72x72-precomposed.png"
    />
    <link
      rel="apple-touch-icon"
      type="image/x-icon"
      sizes="114x114"
      href="img/apple-touch-icon-114x114-precomposed.png"
    />
    <link
      rel="apple-touch-icon"
      type="image/x-icon"
      sizes="144x144"
      href="img/apple-touch-icon-144x144-precomposed.png"
    />

    <!-- GOOGLE WEB FONT-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Caveat:wght@400;500&family=Montserrat:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <script src="../js/jquery.easing.min.js"></script>
    <script src="../js/scrolling-nav.js"></script>
    <script src="../js/common_functions.js"></script>
    <script is:inline src="https://code.jquery.com/jquery-3.7.0.min.js"
    ></script>
    <script is:inline src="scrollCue.min.js"></script>
  </head>
  <main>
    <header class="fixed_header menu_v1">
      <div class="layer"></div>
      <!-- Opacity Mask -->
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md-3 col-5"></div>
          <div class="col-md-9 col-7">
            <div class="main-menu">
              <a href="#" class="closebt open_close_menu"
                ><i class="bi bi-x"></i></a
              >
              <div class="logo_panel">
                <img
                  src="/img/logo_sticky.svg"
                  width="180"
                  height="34"
                  alt=""
                />
              </div>
              <nav id="mainNav">
                <ul>
                  <li>
                    <a href="#about" class="js-scroll-trigger animated_link"
                      >About</a
                    >
                  </li>
                  <li>
                    <a
                      href="#experiences"
                      class="js-scroll-trigger animated_link">Experiences</a
                    >
                  </li>
                  <li>
                    <a href="#gallery" class="js-scroll-trigger animated_link"
                      >Gallery</a
                    >
                  </li>

                  <li>
                    <a href="#contacts" class="js-scroll-trigger animated_link"
                      >Contacts</a
                    >
                  </li>

                  <li>
                    <!-- <a href="#booking_section" class="js-scroll-trigger btn_1"
                      >Book Now</a
                    > -->
                    <div data-tf-live="01HGRKWD9TD51C6SJEF1EVSSRY"></div>
                  </li>
                </ul>
              </nav>
            </div>
            <div class="hamburger_2 open_close_menu float-end">
              <div class="hamburger__box">
                <div class="hamburger__inner"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- container -->
    </header>
    <body data-bs-spy="scroll" data-bs-offset="120" data-bs-target="#mainNav">
      <Hero />
      <!-- About Us -->
      <div class="bg_white" id="about">
        <div class="container margin_120_95">
          <div
            class="row justify-content-between flex-lg-row-reverse align-items-center">
            <div class="col-lg-5">
              <div class="parallax_wrapper">
                <img src="/img/img5.jpg" alt="" class="img-fluid rounded-img" />
                <div data-cue="slideInUp" class="img_over">
                  <span data-jarallax-element="-30"
                    ><img
                      src="/img/img6.jpg"
                      alt=""
                      class="rounded-img"
                    /></span
                  >
                </div>
              </div>
            </div>
            <div class="col-lg-5">
              <div class="intro">
                <div class="title">
                  <small>About us</small>
                  <h2>Where Adventure Unfolds</h2>
                </div>

                <p>
                  At FreeInGo, we go beyond crafting a luxurious getaway; we're
                  architects of unforgettable experiences that resonate in the
                  hearts and minds of our guests. Our narrative is one of
                  passion, dedication, and a profound connection to the untamed
                  beauty of our planet. Join us as we redefine the art of
                  exploration, creating memories that last a lifetime.
                </p>
                <p><em>Johnson... the Owner</em></p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Testimonials -->
      <div class="parallax_section_1 jarallax" data-jarallax data-speed="0.2">
        <img class="jarallax-img kenburns-2" src="img/img7.jpg" alt="" />
        <div
          class="wrapper opacity-mask d-flex align-items-center justify-content-center text-center"
          data-opacity-mask="rgba(0, 0, 0, 0.5)">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-lg-8">
                <div class="title white">
                  <small class="mb-1">Testimonials</small>
                  <h2>What Our Client Says</h2>
                </div>
                <div
                  class="carousel_testimonials owl-carousel owl-theme nav-dots-orizontal">
                  <div>
                    <div class="box_overlay">
                      <div class="pic">
                        <figure>
                          <img
                            src="img/testimonial_1.jpg"
                            alt=""
                            class="img-circle"
                          />
                        </figure>
                        <h4>John <small>12 Oct</small></h4>
                      </div>
                      <div class="comment">
                        My adventure with FreeInGo Tourism surpassed all
                        expectations! From the seamless planning to the
                        awe-inspiring destinations, every moment was
                        meticulously curated. This isn't just a travel company;
                        it's a gateway to extraordinary experiences. Thank you,
                        FreeInGo, for turning my dream trip into a reality!
                      </div>
                    </div>
                    <!-- End box_overlay -->
                  </div>
                  <div>
                    <div class="box_overlay">
                      <div class="pic">
                        <figure>
                          <img
                            src="img/testimonial_1.jpg"
                            alt=""
                            class="img-circle"
                          />
                        </figure>
                        <h4>Roberta<small>2 Nov</small></h4>
                      </div>
                      <div class="comment">
                        FreeInGo Tourism didn't just take me places; they
                        immersed me in a world of enchantment. The attention to
                        detail, the knowledgeable guides, and the commitment to
                        responsible travel made my journey unforgettable. If you
                        seek not just a vacation but an odyssey, FreeInGo is the
                        way to go!
                      </div>
                    </div>
                    <!-- End box_overlay -->
                  </div>
                  <div>
                    <div class="box_overlay">
                      <div class="pic">
                        <figure>
                          <img
                            src="img/testimonial_1.jpg"
                            alt=""
                            class="img-circle"
                          />
                        </figure>
                        <h4>Roberta<small>3 Dec</small></h4>
                      </div>
                      <div class="comment">
                        Kudos to FreeInGo Tourism for orchestrating an adventure
                        that blended luxury with the untamed beauty of nature.
                        The accommodations were superb, the wildlife encounters
                        were breathtaking, and the entire experience left me in
                        awe. FreeInGo exceeded my expectations, and I can't wait
                        to embark on another journey with them!
                      </div>
                    </div>
                    <!-- End box_overlay -->
                  </div>
                </div>
                <!-- End carousel_testimonials -->
              </div>
            </div>
          </div>
        </div>
      </div>

      <Destinations/>
      

      <!-- Horizontal moving line -->
      <div class="marquee">
        <div class="track">
          <div class="content">
            &nbsp;Relax Enjoy Luxury Holiday Travel Discover Experience Relax
            Enjoy Luxury Holiday Travel Discover Experience Relax Enjoy Luxury
            Holiday Travel Discover Experience Relax Enjoy Luxury Holiday Travel
            Discover Experience
          </div>
        </div>
      </div>

      <div class="bg_white">
        <div class="pinned-image pinned-image--medium">
          <div class="pinned-image__container" id="section_video">
            <img src="/img/img2.jpg" />
            <div class="pinned-image__container-overlay"></div>
          </div>
          <div class="pinned_over_content">
            <div class="title white">
              <small data-cue="slideInUp" data-delay="200"
                >Your next memorable Experience</small
              >
              <h2 data-cue="slideInUp" data-delay="300">
                Embark on Nature's Embrace <br />
                 An Unforgettable Wildlife Retreats
              </h2>
            </div>
          </div>
        </div>
        <!-- /pinned content -->
      </div>

      <!-- Gallery -->
      <Gallery />

      <!-- contact us -->
      <div class="container margin_120_95" id="contacts">
        <div class="row justify-content-between">
          <div class="col-xl-4">
            <div data-cue="slideInUp">
              <div class="title">
                <h2>Address</h2>
              </div>
              <p>Arusha Tanzania</p>
              <div class="phone_element no_borders">
                <a href="tel://+255715534997"
                  ><i class="bi bi-telephone"></i><span
                    ><em>Bookings</em>+255715534997</span
                  ></a
                >
              </div>
              <div class="phone_element no_borders">
                <a href="mailto:freeingo@gmail.com"
                  ><i class="bi bi-envelope"></i><span
                    ><em>Questions</em>freeingo@gmail.com</span
                  ></a
                >
              </div>
              <div class="social mt-1">
                <ul>
                  <li>
                    <a href="#0"><i class="bi bi-instagram"></i></a>
                  </li>
                  <li>
                    <a href="#0"><i class="bi bi-whatsapp"></i></a>
                  </li>
                  <li>
                    <a href="#0"><i class="bi bi-facebook"></i></a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <div class="col-xl-7" id="booking_section">
            <ul class="nav nav-tabs" id="customTab" role="tablist">
              <li class="nav-item" role="presentation">
                <button
                  class="nav-link"
                  id="second_tab"
                  data-bs-toggle="tab"
                  data-bs-target="#second_tab_pane"
                  type="button"
                  role="tab"
                  aria-controls="second_tab_pane"
                  aria-selected="false">
                  Contact Us
                </button>
              </li>
            </ul>
            <!-- /tabs -->
            <div class="tab-content">
              <div
                class="tab-pane fade show active"
                id="first_tab_pane"
                role="tabpanel"
                aria-labelledby="first_tab"
                tabindex="0">
                <!-- / booking_wrapper -->
              </div>
              <!-- /tab_booking-->
              <div>
                <div class="contacts_wrapper">
                  <form
                    method="post"
                    action=""
                    id="contactform"
                    autocomplete="off">
                    <div class="row">
                      <div class="col-sm-6">
                        <div class="form-floating mb-4">
                          <input
                            class="form-control"
                            type="text"
                            id="name_contact"
                            name="name_contact"
                            placeholder="Name"
                          />
                          <label for="name_contact">Name</label>
                        </div>
                      </div>
                      <div class="col-sm-6">
                        <div class="form-floating mb-4">
                          <input
                            class="form-control"
                            type="text"
                            id="lastname_contact"
                            name="lastname_contact"
                            placeholder="Last Name"
                          />
                          <label for="lastname_contact">Last name</label>
                        </div>
                      </div>
                    </div>
                    <!-- /row -->
                    <div class="row">
                      <div class="col-sm-6">
                        <div class="form-floating mb-4">
                          <input
                            class="form-control"
                            type="email"
                            id="email_contact"
                            name="email_contact"
                            placeholder="Email"
                          />
                          <label for="email_contact">Email</label>
                        </div>
                      </div>
                      <div class="col-sm-6">
                        <div class="form-floating mb-4">
                          <input
                            class="form-control"
                            type="text"
                            id="phone_contact"
                            name="phone_contact"
                            placeholder="Telephone"
                          />
                          <label for="phone_contact">Telephone</label>
                        </div>
                      </div>
                    </div>
                    <!-- /row -->
                    <div class="form-floating mb-4">
                      <textarea
                        class="form-control"
                        placeholder="Message"
                        id="message_contact"
                        name="message_contact"></textarea>
                      <label for="message_contact">Message</label>
                    </div>
                    <hr />
                    <div class="row">
                      <div class="col-md-1 mb-2">
                        <p class="text-end">
                          <input
                            class="btn_1 outline"
                            type="submit"
                            value="Submit"
                            id="submit-contact"
                          />
                        </p>
                      </div>
                    </div>
                    <!-- / row -->
                  </form>
                </div>
                <!-- /tab_contacts-->
              </div>
              <!-- /contacts_wrapper-->
            </div>
            <!-- /tab_content-->
          </div>
        </div>
        <!-- /row -->
      </div>

      <!--map_contact -->
      <div class="copy">
        <div class="container">
          Â© freeinGo - by <a href="https://twitter.com/brightonMboya"
            >Brighton Mboya</a
          >
        </div>
      </div>

      <!-- <script src="//embed.typeform.com/next/embed.js"></script> -->
    </body>
  </main>


</html>
